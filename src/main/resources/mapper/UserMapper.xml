<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hd.hd_backend.mapper.UserMapper">
    <select id="getUserById" resultType="com.hd.hd_backend.entity.NormalUser">
        SELECT * FROM normal_user WHERE user_id = #{userId}
    </select>

    <update id="updateUser">
        UPDATE normal_user
        SET name = #{user.name},
            height = #{user.height},
            weight = #{user.weight},
            age = #{user.age},
            gender = #{user.gender}
        WHERE user_id = #{userId}
    </update>
</mapper> 